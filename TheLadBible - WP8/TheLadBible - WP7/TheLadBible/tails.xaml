            <Image Height="116" Source="img/Untitled-1.png" Stretch="Fill" Name="Image1" />
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0" Grid.ColumnSpan="2">
            <TextBlock Margin="71,6,178,0" TextWrapping="Wrap" Text="theLADtails" VerticalAlignment="Top" Foreground="{StaticResource PhoneAccentBrush}" FontSize="29.333" HorizontalAlignment="Center" Width="207" Name="txtblocknumber" />
