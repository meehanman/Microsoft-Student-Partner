                <Path Data="M11,28 L438.00116,28" Fill="#FF727272" Height="120.036" Margin="0,0,8,0" Stretch="Fill" Stroke="#FF939393" UseLayoutRounding="False" StrokeThickness="2" d:LayoutOverrides="Width"/>
